<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#ffbb00"
    tools:context="com.example.maggiemoheb.bugs.LoginActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/txtPassword"
        android:textColor="#ffffff"
        android:hint="@string/password"
        android:layout_below="@+id/txtEmail"
        android:layout_alignLeft="@+id/txtEmail"
        android:layout_alignStart="@+id/txtEmail"
        android:layout_alignRight="@+id/txtEmail"
        android:layout_alignEnd="@+id/txtEmail" />
    <!--android:alpha="0.5"-->

    <Button
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:text="@string/login"
        android:id="@+id/btnLogin"
        android:background="@color/com_facebook_blue"
        android:textColor="@color/com_facebook_button_login_silver_background_color"
        android:onClick="onClick"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/txtPassword"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtEmail"
        android:hint="@string/email"
        android:textColor="#ffffff"
        android:layout_marginTop="150dp"
        android:layout_centerHorizontal="true"/>
    <!--android:alpha="0.5"-->

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/logo"
        android:src="@mipmap/bug"
        android:layout_above="@+id/userLogin"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/userLogin"
        android:src="@mipmap/email"
        android:layout_above="@+id/txtPassword" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/keyLogin"
        android:src="@mipmap/password"
        android:layout_above="@+id/btnLogin" />

    <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="@string/or"-->
        <!--android:id="@+id/or"-->
        <!--android:layout_marginTop="20dp"-->
        <!--android:layout_below="@+id/btnLogin"-->
        <!--android:layout_centerHorizontal="true" />-->

    <Button
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:text="@string/facebookLogin"
        android:id="@+id/btnFacebookLogin"
        android:background="@color/com_facebook_blue"
        android:textColor="@color/com_facebook_button_login_silver_background_color"
        android:onClick="onClick"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/btnLogin"
        android:layout_centerHorizontal="true" />

    <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="@string/or"-->
        <!--android:id="@+id/or2"-->
        <!--android:layout_marginTop="20dp"-->
        <!--android:layout_below="@+id/btnFacebookLogin"-->
        <!--android:layout_centerHorizontal="true" />-->

    <Button
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:text="@string/signUp"
        android:id="@+id/btnSignUp"
        android:onClick="onClick"
        android:background="@color/com_facebook_blue"
        android:textColor="@color/com_facebook_button_login_silver_background_color"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/btnFacebookLogin"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
