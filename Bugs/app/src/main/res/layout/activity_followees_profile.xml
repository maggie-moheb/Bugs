<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.maggiemoheb.bugs.FolloweesProfile"
    android:id="@+id/DrawerLayout"
    android:background="#ffffff">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#ffbb00" >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/logo"
            android:layout_gravity="right"/>
    </LinearLayout>
    <!--<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"-->
    <!--android:orientation="vertical"-->
    <!--android:id="@+id/layout1"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="70dp"-->
    <!--android:background="#ffbb00"-->
    <!--android:paddingLeft="@dimen/activity_horizontal_margin"-->
    <!--android:paddingRight="@dimen/activity_horizontal_margin"-->
    <!--android:paddingTop="@dimen/activity_vertical_margin"-->
    <!--android:paddingBottom="@dimen/activity_vertical_margin"></LinearLayout>-->
    <ImageView
        android:layout_width="145dp"
        android:layout_height="145dp"
        android:id="@+id/profilePicture"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="3am Ayoub"
        android:id="@+id/name"
        android:layout_marginTop="26dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="26dp"
        android:layout_below="@+id/layout"
        android:layout_toRightOf="@+id/profilePicture"
        android:layout_toEndOf="@+id/profilePicture" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="ayoub_seeboF7alo@gmail.com"
        android:id="@+id/email"
        android:layout_below="@+id/name"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/profilePicture"
        android:layout_toEndOf="@+id/profilePicture" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLargePopupMenu"
        android:text="Personal Info"
        android:textSize="23dp"
        android:id="@+id/infoTitle"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/profilePicture"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Location:"
        android:layout_marginLeft="10dp"
        android:id="@+id/locationTitle"
        android:layout_below="@+id/infoTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Cairo, Egypt"
        android:id="@+id/location"
        android:layout_gravity="center"
        android:visibility="visible"
        android:layout_alignTop="@+id/locationTitle"
        android:layout_alignLeft="@+id/email"
        android:layout_alignStart="@+id/email" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Birth Date:"
        android:layout_marginLeft="10dp"
        android:id="@+id/birthDateTitle"
        android:layout_below="@+id/locationTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="1/1/1901"
        android:id="@+id/birthDate"
        android:visibility="visible"
        android:layout_gravity="center_horizontal"
        android:layout_above="@+id/gender"
        android:layout_alignLeft="@+id/location"
        android:layout_alignStart="@+id/location" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Gender:"
        android:id="@+id/genderTitle"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/birthDateTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Male"
        android:visibility="visible"
        android:id="@+id/gender"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/birthDateTitle"
        android:layout_alignLeft="@+id/birthDate"
        android:layout_alignStart="@+id/birthDate" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLargePopupMenu"
        android:text="Posts"
        android:textSize="23dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/postsTitle"
        android:layout_below="@+id/genderTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="9dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Write a New Post!"
        android:id="@+id/newPostButton"
        android:background="@color/com_facebook_blue"
        android:textColor="@color/com_facebook_button_login_silver_background_color"
        android:padding="5dp"
        android:layout_marginTop="3dp"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/gender"
        android:layout_toRightOf="@+id/infoTitle"
        android:layout_toEndOf="@+id/infoTitle" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/android:list"
        android:layout_below="@+id/newPostButton"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:visibility="invisible"
        android:id="@+id/editName"
        android:layout_alignBottom="@+id/name"
        android:layout_toRightOf="@+id/profilePicture"
        android:layout_toEndOf="@+id/profilePicture" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/editEmail"
        android:visibility="invisible"
        android:layout_below="@+id/name"
        android:layout_toRightOf="@+id/profilePicture"
        android:layout_toEndOf="@+id/profilePicture" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:id="@+id/editLocation"
        android:visibility="invisible"
        android:layout_above="@+id/birthDate"
        android:layout_alignLeft="@+id/location"
        android:layout_alignStart="@+id/location"
        android:layout_below="@+id/infoTitle" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/editBirthDate"
        android:visibility="invisible"
        android:layout_above="@+id/gender"
        android:layout_alignLeft="@+id/location"
        android:layout_alignStart="@+id/location"
        android:layout_below="@+id/location" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editGender"
        android:visibility="invisible"
        android:layout_below="@+id/birthDate"
        android:layout_alignLeft="@+id/birthDate"
        android:layout_alignStart="@+id/birthDate"
        android:layout_alignBottom="@+id/gender" />

</RelativeLayout>
<android.support.v7.widget.RecyclerView
android:id="@+id/RecyclerView"
android:layout_width="320dp"
android:layout_height="match_parent"
android:layout_gravity="left"
android:background="#545454"
android:scrollbars="vertical">
</android.support.v7.widget.RecyclerView>
    </android.support.v4.widget.DrawerLayout>