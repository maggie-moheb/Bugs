<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.minatalaat.myapplication.ViewNotifications"
    tools:showIn="@layout/activity_view_notifications"
    android:weightSum="1"
    android:baselineAligned="false"
    android:orientation="vertical"
    android:layout_gravity="bottom"
    android:background="#608de7">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Yasmine has sent you a friend request"
        android:id="@+id/textView3"
        android:layout_gravity=""
        android:textColor="#050404"
        android:layout_weight="0.14"
        android:background="#608de7" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:text="Ola has commented on your post"
        android:id="@+id/textView5"
        android:textColor="#0a0202"
        android:layout_weight="0.13"
        android:background="#608de7" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Nardine posted on your wall"
        android:id="@+id/textView6"
        android:layout_gravity="bottom"
        android:textColor="#0a0202"
        android:layout_weight="0.17" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Haidy has sent you a friend request"
        android:id="@+id/textView7"
        android:textColor="#0c0101"
        android:background="#608de7"
        android:layout_weight="0.12" />
</LinearLayout>
